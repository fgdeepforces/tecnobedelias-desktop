<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import com.jfoenix.controls.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.proyecto.tecnobedelias_desktop.views.main.Main">
   <children>
      <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <JFXButton fx:id="btnLogout" onAction="#logoutButtonPushed" text="Log Out" BorderPane.alignment="TOP_RIGHT">
               <font>
                  <Font size="18.0" />
               </font>
            </JFXButton>
         </top>
         <left>
            <VBox BorderPane.alignment="CENTER">
               <children>
                  <JFXButton fx:id="btnCursos" onAction="#cursosButtonPushed" prefHeight="30.0" prefWidth="69.0" text="Cursos" />
                  <JFXButton fx:id="btnExamenes" onAction="#examenesButtonPushed" prefHeight="30.0" prefWidth="69.0" text="Examenes" />
               </children>
            </VBox>
         </left>
         <center>
            <AnchorPane BorderPane.alignment="CENTER">
               <children>
                  <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <top>
                        <Label fx:id="lblTitulo" text="Cursos" BorderPane.alignment="CENTER">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                     </top>
                     <center>
                        <TableView fx:id="dataTable" BorderPane.alignment="CENTER">
                          <columns>
                            <TableColumn fx:id="colId" prefWidth="75.0" text="Id" />
                            <TableColumn fx:id="colNombre" prefWidth="75.0" text="Curso" />
                              <TableColumn fx:id="colAsignatura" prefWidth="75.0" text="Asignatura" />
                              <TableColumn fx:id="colFechaInicio" prefWidth="75.0" text="Fecha Inicio" />
                              <TableColumn fx:id="colFechaFin" prefWidth="75.0" text="Fecha Fin" />
                              <TableColumn fx:id="colSemestre" prefWidth="75.0" text="Semestre" />
                              <TableColumn prefWidth="75.0" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </center>
                     <bottom>
                        <JFXButton fx:id="btnAgregar" onAction="#onAddItem" prefHeight="30.0" text="Agregar" BorderPane.alignment="BOTTOM_RIGHT" />
                     </bottom>
                  </BorderPane>
               </children>
            </AnchorPane>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
